@page
@model doAn_KTLT.Pages.suaHoaDonNhapModel

@if (Model.kiemTra)
{
    <form method="post">
        <label>Mã hóa đơn</label><br>
        <input type="text" name="maHD" value="@Model.hoaDonNhap.maHoaDon" pattern="^[^\s]+(\s+[^\s]+)*$" required><br>
        <label>Ngày hóa đơn</label><br>
        <input type="text" name="ngayHD" value="@Model.hoaDonNhap.ngayHoaDon.Ngay/@Model.hoaDonNhap.ngayHoaDon.Thang/@Model.hoaDonNhap.ngayHoaDon.Nam" pattern="^(?:(?:31(\/)(?:0?[13578]|1[02]))\1|(?:(?:29|30)(\/)(?:0?[1,3-9]|1[0-2])\2))(?:(?:1[6-9]|[2-9]\d)?\d{2})$|^(?:29(\/|-|\.)0?2\3(?:(?:(?:1[6-9]|[2-9]\d)?(?:0[48]|[2468][048]|[13579][26])|(?:(?:16|[2468][048]|[3579][26])00))))$|^(?:0?[1-9]|1\d|2[0-8])(\/)(?:(?:0?[1-9])|(?:1[0-2]))\4(?:(?:1[6-9]|[2-9]\d)?\d{2})$" required><br>
        <label>Mã mặt hàng</label><br>
        <input type="text" name="maMH" value="@Model.hoaDonNhap.maHang" pattern="^[^\s]+(\s+[^\s]+)*$" required><br>
        <label>Số lượng</label><br>
        <input type="text" name="soLuong" value="@Model.hoaDonNhap.soLuong" pattern="^[0-9]*$" required><br>
        <label>Đơn giá nhập</label><br>
        <input type="text" name="donGia" value="@Model.hoaDonNhap.donGia" pattern="^[0-9]*$" required><br><br>
        <button type="submit" name="suKien" value="Sửa">Sửa</button>
    </form>
}
@Model.ketQua
