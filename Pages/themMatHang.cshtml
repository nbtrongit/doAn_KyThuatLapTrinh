@page
@model doAn_KTLT.Pages.themMatHangModel
@using doAn_KTLT.Entities


<form method="post">
    <label>Mã Hàng</label><br>
    <select name="maHang" required>
        <option value="">Chọn mã hàng</option>
        @foreach (HoaDonNhap hdn in Model.dsHoaDonNhap)
        {
            <option value="@hdn.maHang">@hdn.maHang</option>
        }
    </select><br><br>
    <label>Tên mặt hàng</label><br>
    <input type="text" name="tenMH" value="" pattern="^[^\s]+(\s+[^\s]+)*$" required><br>
    <label>Hạn sử dụng</label><br>
    <input type="text" name="hanDung" value="" pattern="^(?:(?:31(\/)(?:0?[13578]|1[02]))\1|(?:(?:29|30)(\/)(?:0?[1,3-9]|1[0-2])\2))(?:(?:1[6-9]|[2-9]\d)?\d{2})$|^(?:29(\/|-|\.)0?2\3(?:(?:(?:1[6-9]|[2-9]\d)?(?:0[48]|[2468][048]|[13579][26])|(?:(?:16|[2468][048]|[3579][26])00))))$|^(?:0?[1-9]|1\d|2[0-8])(\/)(?:(?:0?[1-9])|(?:1[0-2]))\4(?:(?:1[6-9]|[2-9]\d)?\d{2})$" required><br>
    <label>Công ty sản xuất</label><br>
    <input type="text" name="congtySX" value="" pattern="^[^\s]+(\s+[^\s]+)*$" required><br>
    <label>Ngày sản xuất</label><br>
    <input type="text" name="ngaySX" value="" pattern="^(?:(?:31(\/)(?:0?[13578]|1[02]))\1|(?:(?:29|30)(\/)(?:0?[1,3-9]|1[0-2])\2))(?:(?:1[6-9]|[2-9]\d)?\d{2})$|^(?:29(\/|-|\.)0?2\3(?:(?:(?:1[6-9]|[2-9]\d)?(?:0[48]|[2468][048]|[13579][26])|(?:(?:16|[2468][048]|[3579][26])00))))$|^(?:0?[1-9]|1\d|2[0-8])(\/)(?:(?:0?[1-9])|(?:1[0-2]))\4(?:(?:1[6-9]|[2-9]\d)?\d{2})$" required><br>
    <label>Loại Hàng</label><br>
    <select name="loaiHang" required>
        <option value="">Chọn loại hàng</option>
        @foreach (string lh in Model.dsLoaiHang)
        {
            <option value="@lh">@lh</option>
        }
    </select><br><br>
    <button type="submit" name="suKien" value="Thêm">Thêm</button>
    <button type="button" onclick="location.href='MatHang'">Tìm Kiếm</button>
    <button type="button" onclick="location.href='index'">Index</button>
</form>
@Model.ketQua